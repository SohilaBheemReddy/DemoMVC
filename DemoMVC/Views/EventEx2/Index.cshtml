
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm("DelEmp","EventEx2"))
{ 
    <h3>Enter Employee no  @Html.DropDownList("ddlEmpno",
                          new SelectList(ViewBag.EL,
                          "Empno","Ename"),"Select") </h3>
    <input type="submit" value="submit" onclick="return func();"/>
    if (ViewBag.msg != null)
    {
    @ViewBag.msg
    }

}
<script>
    function func() {
        var eno = document.getElementById("ddlEmpno").value;
        if (eno.length != 0) {
            var c = confirm("Do you want delete " + eno);
            if (c == true)
                return true;
            else
                return false;
        }
        return false;
    }
</script>
